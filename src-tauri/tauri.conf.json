{
  "productName": "CheetahNote",
  "version": "0.1.0",
  "identifier": "com.cheetahnote.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'"
      },
      "capabilities": ["default"]   
    },
    "windows": [
      {
        "title": "CheetahNote",
        "label": "main",
        "width": 900,
        "height": 600,
        "minWidth": 500,
        "minHeight": 350,
        "resizable": true,
        "center": true,
        "visible": true,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "fullscreen": false,
        "skipTaskbar": false
      }
    ]
  }
}