{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "CheetahNote",
  "version": "0.1.0",
  "identifier": "com.cheetahnote.desktop",
  "build": {
    "frontendDist": "./src",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": false,
    "macOSPrivateApi": false,
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: https:",
        "font-src": "'self' data:",
        "connect-src": "'self' ipc: https://tauri.localhost"
      }
    },
    "windows": [
      {
        "title": "CheetahNote - 极速 Markdown 笔记",
        "label": "main",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "fullscreen": false,
        "transparent": false,
        "alwaysOnTop": false,
        "contentProtected": false,
        "skipTaskbar": false,
        "hiddenTitle": false,
        "acceptFirstMouse": false,
        "center": true,
        "decorations": true,
        "shadow": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "category": "Productivity",
    "targets": "all",
    "copyright": "Copyright © 2025 CheetahNote Team. All rights reserved.",
    "shortDescription": "高性能 Markdown 笔记软件",
    "longDescription": "CheetahNote 是一款追求极致性能的 Markdown 笔记软件",
    "publisher": "CheetahNote Team",
    "license": "MIT",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.0-37",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ]
      }
    }
  }
}